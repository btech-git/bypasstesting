{% set grid_layout = 'datagrid.html.twig' %}

{{ grid_top(grid) }}

<table data-role="table" class="table table-bordered table-striped table-condensed table-hover">
    <thead>
        <tr data-action="sort" class="alert alert-info">
            <th data-group="supplier" data-field="name">Perusahaan</th>
            <th data-group="supplier" data-field="contactPerson">Contact Person</th>
            <th data-group="supplier" data-field="phone">Phone</th>
            <th data-group="supplier" data-field="businessField">Business Field</th>
        </tr>
        <tr data-action="search">
            <th data-group="supplier" data-field="name"></th>
            <th data-group="supplier" data-field="contactPerson"></th>
            <th data-group="supplier" data-field="phone"></th>
            <th data-group="supplier" data-field="email"></th>
        </tr>
    </thead>
    <tbody>
        {% for supplier in grid.data %}
            <tr data-field-id="{{ supplier.id }}"
                data-field-name="{{ supplier.name|default }}"
                data-field-contact-person="{{ supplier.contactPerson|default }}"
                data-field-phone="{{ supplier.phone|default }}"
                data-field-mobile-phone="{{ supplier.mobilePhone|default }}"
                data-field-tax-number="{{ supplier.taxNumber|default }}"
                data-field-office-address="{{ supplier.officeAddress|default }}"
                data-field-office-city="{{ supplier.officeCity|default }}"
                data-field-office-province="{{ supplier.officeProvince|default }}"
                data-field-office-zip-code="{{ supplier.officeZipCode|default }}">
                <td class="text-left">{{ supplier.name|default }}</td>
                <td class="text-left">{{ supplier.contactPerson|default }}</td>
                <td class="text-left">{{ supplier.phone|default }}</td>
                <td class="text-left">{{ supplier.email|default }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4" class="alert alert-warning">
                    <strong>There are no items to display.</strong>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>

{{ grid_bottom(grid) }}

<script>
    jQuery(function($) {
        $("#{{ grid.id }}-top").css("display", "none");
    });
</script>
