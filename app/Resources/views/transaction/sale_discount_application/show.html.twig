            </tr>
            <tr>
                <th>Customer</th>
                <td>{{ saleDiscountApplication.customer.name|default }}</td>
            </tr>
            <tr>
                <th>Contact Person</th>
                <td>{{ saleDiscountApplication.customer.contactPerson|default }}</td>
            </tr>
