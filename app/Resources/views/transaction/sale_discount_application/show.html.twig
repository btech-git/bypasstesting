            </tr>
            <tr>
                <th>Hub</th>
                <td>{{ saleDiscountApplication.mediatorRanking|default }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ saleDiscountApplication.mediatorPhone|default }}</td>
            </tr>
