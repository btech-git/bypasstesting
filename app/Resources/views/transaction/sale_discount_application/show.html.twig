                <td>{{ saleDiscountApplication.workshopPrice|default|number_format(0) }}</td>
            </tr>
            <tr>
                <th>Profit</th>
                <td>{{ saleDiscountApplication.workshopProfit|default|number_format(0) }}</td>
            </tr>
