{% extends 'transaction/layout.html.twig' %}

{% block title 'Manage Purchase Delivery Order' %}

{% block actions %}
    {{ include('transaction/actions.html.twig') }}
{% endblock %}

{% block content %}
    {% for type, flashes in app.session.flashBag.all %}
        {% for flash in flashes %}
            <div class="alert alert-{{ type }} alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <strong>{{ flash.title }}</strong> {{ flash.message }}
            </div>
        {% endfor %}
    {% endfor %}

    <div id="purchase-delivery-order-grid" data-grid="{{ path('transaction_purchase_delivery_order_grid') }}"></div>
    
    <br />
    
    <div>
        {{ include('action.html.twig', {'url': path('transaction_purchase_delivery_order_index_outstanding'), 'label': 'Check Outstanding', 'button': 'btn btn-info', 'icon': 'glyphicon glyphicon-info-sign'}) }}
    </div>
{% endblock %}
