{% extends 'master/layout.html.twig' %}

{% block actions %}
    {{ include('master/actions.html.twig') }}
{% endblock %}

{% block content %}
    {{ form_start(form) }}
        <div>{{ form_errors(form) }}</div>
        <div class="row">
            <div class="col-sm-6">
                {{ form_row(form.accountCategory, {'label': 'Kategori'}) }}
                {{ form_row(form.code, {'label': 'Kode'}) }}
                {{ form_row(form.name, {'label': 'Name'}) }}
                {{ form_row(form.isCashOrBank, {'label': 'Kas/Bank'}) }}
                {{ form_row(form.isProfitLoss, {'label': 'Profit/Loss'}) }}
                {{ form_row(form.isActive, {'label': 'Status'}) }}
            </div>
        </div>
        <input class="btn btn-primary navbar-inverse" type="submit" value="Save" data-confirm="Do you want to proceed?" />
    {{ form_end(form) }}
{% endblock %}
