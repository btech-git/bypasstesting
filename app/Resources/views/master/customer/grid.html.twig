{% set grid_layout = 'datagrid.html.twig' %}

{{ grid_top(grid) }}

<table data-role="table" class="table table-bordered table-striped table-condensed table-hover">
    <thead>
        <tr data-action="sort" class="alert alert-info">
            <th data-group="customer" data-field="name">Name</th>
            <th data-group="customer" data-field="officeAddress">Office Address</th>
            <th data-group="customer" data-field="officeCity">Office City</th>
            <th data-group="customer" data-field="officeProvince">Office Province</th>
            <th data-group="customer" data-field="officeZipCode">Office Zip Code</th>
            <th data-group="customer" data-field="warehouseAddress">Warehouse Address</th>
            <th data-group="customer" data-field="warehouseCity">Warehouse City</th>
            <th data-group="customer" data-field="warehouseProvince">Warehouse Province</th>
            <th data-group="customer" data-field="warehouseZipCode">Warehouse Zip Code</th>
            <th data-group="customer" data-field="phone">Phone</th>
            <th data-group="customer" data-field="fax">Fax</th>
            <th data-group="customer" data-field="mobilePhone">Mobile Phone</th>
            <th data-group="customer" data-field="contactPerson">Contact Person</th>
            <th data-group="customer" data-field="position">Position</th>
            <th data-group="customer" data-field="email">Email</th>
            <th data-group="customer" data-field="taxNumber">Tax Number</th>
            <th data-group="customer" data-field="webPage">Web Page</th>
            <th data-group="customer" data-field="businessField">Business Field</th>
            <th data-group="customer" data-field="categoryTwoHinoPopulation">Category Two Hino Population</th>
            <th data-group="customer" data-field="categoryTwoMitsubishiPopulation">Category Two Mitsubishi Population</th>
            <th data-group="customer" data-field="categoryTwoToyotaPopulation">Category Two Toyota Population</th>
            <th data-group="customer" data-field="categoryTwoIsuzuPopulation">Category Two Isuzu Population</th>
            <th data-group="customer" data-field="categoryTwoOtherPopulation">Category Two Other Population</th>
            <th data-group="customer" data-field="categoryThreeHinoPopulation">Category Three Hino Population</th>
            <th data-group="customer" data-field="categoryThreeMitsubishiPopulation">Category Three Mitsubishi Population</th>
            <th data-group="customer" data-field="categoryThreeNissanPopulation">Category Three Nissan Population</th>
            <th data-group="customer" data-field="categoryThreeIsuzuPopulation">Category Three Isuzu Population</th>
            <th data-group="customer" data-field="categoryThreeBenzPopulation">Category Three Benz Population</th>
            <th data-group="customer" data-field="note">Note</th>
            <th data-group="customer" data-field="isPersonal">Is Personal</th>
            <th data-group="customer" data-field="isCompany">Is Company</th>
            <th data-group="customer" data-field="isActive">Is Active</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {% for customer in grid.data %}
            <tr data-field-id="{{ customer.id }}">
                <td class="text-left">{{ customer.name|default }}</td>
                <td class="text-left">{{ customer.officeAddress|default }}</td>
                <td class="text-left">{{ customer.officeCity|default }}</td>
                <td class="text-left">{{ customer.officeProvince|default }}</td>
                <td class="text-left">{{ customer.officeZipCode|default }}</td>
                <td class="text-left">{{ customer.warehouseAddress|default }}</td>
                <td class="text-left">{{ customer.warehouseCity|default }}</td>
                <td class="text-left">{{ customer.warehouseProvince|default }}</td>
                <td class="text-left">{{ customer.warehouseZipCode|default }}</td>
                <td class="text-left">{{ customer.phone|default }}</td>
                <td class="text-left">{{ customer.fax|default }}</td>
                <td class="text-left">{{ customer.mobilePhone|default }}</td>
                <td class="text-left">{{ customer.contactPerson|default }}</td>
                <td class="text-left">{{ customer.position|default }}</td>
                <td class="text-left">{{ customer.email|default }}</td>
                <td class="text-left">{{ customer.taxNumber|default }}</td>
                <td class="text-left">{{ customer.webPage|default }}</td>
                <td class="text-left">{{ customer.businessField|default }}</td>
                <td class="text-left">{{ customer.categoryTwoHinoPopulation|default }}</td>
                <td class="text-left">{{ customer.categoryTwoMitsubishiPopulation|default }}</td>
                <td class="text-left">{{ customer.categoryTwoToyotaPopulation|default }}</td>
                <td class="text-left">{{ customer.categoryTwoIsuzuPopulation|default }}</td>
                <td class="text-left">{{ customer.categoryTwoOtherPopulation|default }}</td>
                <td class="text-left">{{ customer.categoryThreeHinoPopulation|default }}</td>
                <td class="text-left">{{ customer.categoryThreeMitsubishiPopulation|default }}</td>
                <td class="text-left">{{ customer.categoryThreeNissanPopulation|default }}</td>
                <td class="text-left">{{ customer.categoryThreeIsuzuPopulation|default }}</td>
                <td class="text-left">{{ customer.categoryThreeBenzPopulation|default }}</td>
                <td class="text-left">{{ customer.note|default }}</td>
                <td class="text-left">{{ customer.isPersonal|default ? 'Yes' : 'No' }}</td>
                <td class="text-left">{{ customer.isCompany|default ? 'Yes' : 'No' }}</td>
                <td class="text-left">{{ customer.isActive|default ? 'Yes' : 'No' }}</td>
                <td class="text-left">
                    {{ include('master/actions.html.twig', {
                        'contents': {
                            '{index}': null,
                            '{new}': null,
                            '{show}': include('action.html.twig', {'url': path('master_customer_show', {'id': customer.id}), 'button': 'btn btn-info btn-sm', 'icon': 'glyphicon glyphicon-info-sign'}),
                            '{edit}': include('action.html.twig', {'url': path('master_customer_edit', {'id': customer.id}), 'button': 'btn btn-warning btn-sm', 'icon': 'glyphicon glyphicon-edit'}),
                            '{delete}': include('action.html.twig', {'url': path('master_customer_delete', {'id': customer.id}), 'button': 'btn btn-danger btn-sm', 'icon': 'glyphicon glyphicon-remove'}),
                        }
                    }) }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="33" class="alert alert-warning">
                    <strong>There are no items to display.</strong>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>

{{ grid_bottom(grid) }}
