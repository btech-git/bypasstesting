{% extends 'master/layout.html.twig' %}

{% block title 'Show Employee' %}

{% block actions %}
    {{ include('master/actions.html.twig') }}
{% endblock %}

{% block content %}
    <table class="table table-bordered table-striped">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ employee.name|default }}</td>
            </tr>
            <tr>
                <th>Position</th>
                <td>{{ employee.position|default }}</td>
            </tr>
            <tr>
                <th>Is Active</th>
                <td>{{ employee.isActive|default ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}
